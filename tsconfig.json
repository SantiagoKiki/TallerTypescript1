{
  "compilerOptions": {
    "target": "es5",                         
    "module": "es6",                         
    "outDir": "./scripts",                   
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./scripts/**/*.ts"],          // Incluye todos los archivos .ts en la carpeta scripts
  "exclude": ["node_modules"]                // Excluye solo la carpeta node_modules
}
